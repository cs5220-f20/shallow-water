# C compiler and flags
CC=gcc
CFLAGS=-std=c99 -g

# C++ compiler and flags
CXX=g++
CXXFLAGS=-std=c++14 -g

# CUDA compiler and flags
NVCC=nvcc
#NVCCFLAGS=-O3 -std=c++11
NVCCFLAGS=-O3 -std=c99

# Optimization flags
OPTFLAGS=-O3 -march=native -fopenmp -ffast-math
CFLAGS+=$(OPTFLAGS)
